{
  "name": "ozmevsim-next",
  "version": "1.0.0",
  "description": "Öz Mevsim Isı Sistemleri - Enterprise heating systems website with Next.js 14 and Cloudflare",
  "private": true,
  "keywords": [
    "heating",
    "boiler",
    "thermal-systems",
    "nextjs",
    "cloudflare",
    "turkish"
  ],
  "author": "Celal Başaran",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "build:analyze": "ANALYZE=true prisma generate && next build",
    "build:production": "NODE_ENV=production prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "preview": "next build && next start",
    "clean": "rm -rf .next out dist",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "deploy": "wrangler pages deploy out --project-name ozmevsim",
    "export": "next export",
    "deploy:cloudflare": "npm run build && wrangler pages deploy out",
    "deploy:preview": "npm run build && wrangler pages deploy out --compatibility-date=2024-01-15",
    "wrangler:dev": "wrangler pages dev out",
    "cf:login": "wrangler auth login",
    "cf:d1:create": "wrangler d1 create ozmevsim",
    "cf:r2:create": "wrangler r2 bucket create ozmevsim-media",
    "cf:kv:create": "wrangler kv:namespace create CACHE",
    "cf:secrets:put": "wrangler secret put",
    "audit:security": "npm audit --audit-level moderate",
    "lighthouse": "lighthouse https://ozmevsim.com --output html --output-path ./lighthouse-report.html",
    "pre-deploy": "npm run clean && npm run type-check && npm run lint && npm run build"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.0",
